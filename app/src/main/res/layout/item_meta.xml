<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewMetaTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewMetaStatus"
            android:layout_marginEnd="8dp"
            tools:text="Conclusão da História Principal" />

        <TextView
            android:id="@+id/textViewMetaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/background_status_em_andamento"
            app:layout_constraintTop_toTopOf="@id/textViewMetaTipo"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Em Andamento" />
        <TextView
            android:id="@+id/textViewMetaValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_300"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewMetaTipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Valor: 100 horas / Progresso: 25 horas" />

        <TextView
            android:id="@+id/textViewMetaPrioridade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_300"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewMetaValor"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Prioridade: Alta" />

        <TextView
            android:id="@+id/textViewMetaObservacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_300"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewMetaPrioridade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Observação: Focar nos finais de semana." />

        <TextView
            android:id="@+id/textViewDataLimite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_300"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewMetaObservacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Limite: 31/12/2025" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>